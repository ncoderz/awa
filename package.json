{
  "name": "@zen/cli",
  "version": "1.0.1",
  "description": "Zen AI Coding Agent: start and finish you project right",
  "license": "MIT",
  "author": "Richard Sewell <six5536>",
  "type": "module",
  "bin": {
    "zen": "./dist/index.js"
  },
  "scripts": {
    "init": "tsx scripts/init.ts",
    "dev": "tsx src/cli/index.ts",
    "start": "node dist/index.js",
    "build": "npm run init && npm run lint && npm run typecheck && tsup",
    "gen:example": "tsx src/cli/index.ts generate --template ./templates/example --output ./outputs/example",
    "gen:zen": "tsx src/cli/index.ts generate --template ./templates/zen --output ./outputs/zen",
    "diff:zen": "tsx src/cli/index.ts diff --template ./templates/zen --target .github/agents",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "biome check --error-on-warnings .",
    "lint:fix": "biome check --error-on-warnings --fix .",
    "format": "biome format --write .",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run clean && npm run build",
    "ncu": "npx -y npm-check-updates -i",
    "clean": "node scripts/clean.mjs"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "cli",
    "template",
    "generator",
    "ai-agent",
    "typescript"
  ],
  "engines": {
    "node": ">=24.0.0"
  },
  "dependencies": {
    "@clack/prompts": "^0.11.0",
    "chalk": "^5.6.2",
    "citty": "^0.1.6",
    "degit": "^2.8.4",
    "diff": "^8.0.2",
    "eta": "^4.5.0",
    "isbinaryfile": "^6.0.0",
    "smol-toml": "^1.5.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^2",
    "@types/degit": "^2.8.6",
    "@types/node": "^25.0.2",
    "@vitest/coverage-v8": "^4.0.15",
    "fast-check": "^4.4.0",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.15"
  }
}
