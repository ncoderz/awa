{
  "name": "@ncoderz/awa",
  "version": "1.5.0",
  "description": "awa is an Agent Workflow for AIs. It is also a CLI tool to powerfully manage agent workflow files using templates.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ncoderz/awa"
  },
  "author": "Richard Sewell <richard.sewell@ncoderz.com>",
  "type": "module",
  "bin": {
    "awa": "./dist/index.js"
  },
  "scripts": {
    "init": "tsx scripts/init.ts",
    "dev": "tsx src/cli/index.ts",
    "start": "node dist/index.js",
    "build": "npm run init && npm run check && npm run lint && npm run typecheck:all && tsup",
    "gen:example": "tsx src/cli/index.ts template generate ./outputs/example --template ./templates/example",
    "gen:awa": "tsx src/cli/index.ts template generate ./outputs/awa --template ./templates/awa",
    "gen:awa:this": "tsx src/cli/index.ts template generate . --template ./templates/awa --features copilot",
    "diff:awa:this": "tsx src/cli/index.ts template diff . --template ./templates/awa --features copilot",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "check": "npm run dev -- check",
    "lint": "biome check --error-on-warnings .",
    "lint:fix": "biome check --error-on-warnings --fix .",
    "format": "biome format --write .",
    "typecheck": "tsc --noEmit",
    "typecheck:tests": "tsc --noEmit -p tsconfig.test.json",
    "typecheck:all": "npm run typecheck && npm run typecheck:tests",
    "prepublishOnly": "npm run clean && npm run build",
    "ncu": "npx -y npm-check-updates -i",
    "clean": "node scripts/clean.mjs"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public"
  },
  "files": [
    "dist",
    "templates",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "cli",
    "template",
    "generator",
    "ai-agent",
    "typescript"
  ],
  "engines": {
    "node": ">=24.0.0"
  },
  "dependencies": {
    "@clack/core": "^1.0.1",
    "@clack/prompts": "^1.0.1",
    "chalk": "^5.6.2",
    "commander": "^14.0.3",
    "degit": "^2.8.4",
    "diff": "^8.0.3",
    "eta": "^4.5.1",
    "isbinaryfile": "^6.0.0",
    "remark-gfm": "^4.0.1",
    "remark-parse": "^11.0.0",
    "smol-toml": "^1.6.0",
    "unified": "^11.0.5",
    "yaml": "^2.8.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^2",
    "@types/degit": "^2.8.6",
    "@types/mdast": "^4.0.4",
    "@types/node": "^25.3.0",
    "@vitest/coverage-v8": "^4.0.18",
    "fast-check": "^4.5.3",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
