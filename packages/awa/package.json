{
  "name": "@ncoderz/awa",
  "version": "1.5.0",
  "description": "awa is an Agent Workflow for AIs. It is also a CLI tool to powerfully manage agent workflow files using templates.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ncoderz/awa"
  },
  "author": "Richard Sewell <richard.sewell@ncoderz.com>",
  "type": "module",
  "bin": {
    "awa": "./dist/index.js"
  },
  "scripts": {
    "init": "tsx scripts/init.ts",
    "dev": "tsx src/cli/index.ts",
    "start": "node dist/index.js",
    "build": "npm run init && tsup",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "typecheck:tests": "tsc --noEmit -p tsconfig.test.json",
    "clean": "node scripts/clean.mjs",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "cli",
    "template",
    "generator",
    "ai-agent",
    "typescript"
  ],
  "engines": {
    "node": ">=24.0.0"
  },
  "dependencies": {
    "@clack/core": "^1.0.1",
    "@clack/prompts": "^1.0.1",
    "chalk": "^5.6.2",
    "commander": "^14.0.3",
    "degit": "^2.8.4",
    "diff": "^8.0.3",
    "eta": "^4.5.1",
    "isbinaryfile": "^6.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2",
    "@ncoderz/awa-core": "*",
    "@types/degit": "^2.8.6",
    "@types/mdast": "^4.0.4",
    "@types/node": "^25.3.0",
    "@vitest/coverage-v8": "^4.0.18",
    "fast-check": "^4.5.3",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
